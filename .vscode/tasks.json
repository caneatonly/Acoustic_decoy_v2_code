{
    "version": "2.0.0",
    "windows": {
        "options": {
            "shell": {
                "executable": "cmd.exe",
                "args": ["/d", "/c"]
            }
        }
    },
    "tasks": [
        // =================================================================================
        // 使用 nanoDAP-wireless (OpenOCD) 烧录程序，基于powershell
        // =================================================================================
        {
            "type": "shell",
            "label": "OpenOCD: Flash project (nanoDAP-wireless)",
            "command": "powershell",
            "args": [
                "-NoProfile",
                "-Command",
                "$elf = '${command:cmake.launchTargetPath}'.Replace('\\', '/'); $cmd = 'program \"' + $elf + '\" verify reset exit'; openocd -f interface/cmsis-dap.cfg -f target/stm32f1x.cfg -c $cmd"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        // =================================================================================
        // 重新构建并使用 nanoDAP-wireless 烧录
        // =================================================================================
        {
            "label": "Build + Flash (nanoDAP-wireless)",
            "dependsOrder": "sequence",
            "dependsOn": [
                "CMake: clean rebuild",
                "OpenOCD: Flash with nanoDAP-wireless"
            ],
            "problemMatcher": []
        },
        // =================================================================================
        // STM32_Programmer
        // =================================================================================
        {
            "type": "shell",
            "label": "CubeProg: Flash project (ST-Link)",
            "command": "STM32_Programmer_CLI",
            "args": [
                "--connect", "port=swd",
                "--download", "${command:cmake.launchTargetPath}",
                "-hardRst", "-rst", "--start"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Build + Flash (ST-Link)",
            "dependsOrder": "sequence",
            "dependsOn": [
                "CMake: clean rebuild",
                "CubeProg: Flash project (SWD)"
            ],
            "problemMatcher": []
        },
        {
            "type": "cmake",
            "label": "CMake: clean rebuild",
            "command": "cleanRebuild",
            "targets": [ "all" ],
            "preset": "${command:cmake.activeBuildPresetName}",
            "group": "build",
            "problemMatcher": [],
            "detail": "CMake template clean rebuild task"
        },
        {
            "type": "shell",
            "label": "CubeProg: List all available communication interfaces",
            "command": "STM32_Programmer_CLI",
            "args": [ "--list" ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        }
    ]
}