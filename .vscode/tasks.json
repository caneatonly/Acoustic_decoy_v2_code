{
    "version": "2.0.0",
    "windows": {
        "options": {
            "shell": {
                "executable": "cmd.exe",
                "args": ["/d", "/c"]
            }
        }
    },
    "tasks": [
        // =================================================================================
        // 新增任务：使用 nanoDAP-wireless (OpenOCD) 烧录程序
        // =================================================================================
        {
            "type": "shell",
            "label": "OpenOCD: Flash with nanoDAP-wireless",
            "command": "openocd", // 确保 openocd 在系统环境变量中
            "args": [
                "-f", "interface/cmsis-dap.cfg",
                "-f", "target/stm32f1x.cfg",
                "-c", "program ${command:cmake.launchTargetPath} verify reset exit"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        // =================================================================================
        // 新增复合任务：编译并使用 nanoDAP-wireless 烧录
        // =================================================================================
        {
            "label": "Build + Flash (nanoDAP-wireless)",
            "dependsOrder": "sequence",
            "dependsOn": [
                "CMake: clean rebuild",
                "OpenOCD: Flash with nanoDAP-wireless"
            ],
            "problemMatcher": []
        },
        // =================================================================================
        // 您原有的任务 (已保留)
        // =================================================================================
        {
            "type": "shell",
            "label": "CubeProg: Flash project (SWD)",
            "command": "STM32_Programmer_CLI",
            "args": [
                "--connect", "port=swd",
                "--download", "${command:cmake.launchTargetPath}",
                "-hardRst", "-rst", "--start"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Build + Flash (ST-Link)",
            "dependsOrder": "sequence",
            "dependsOn": [
                "CMake: clean rebuild",
                "CubeProg: Flash project (SWD)"
            ],
            "problemMatcher": []
        },
        {
            "type": "cmake",
            "label": "CMake: clean rebuild",
            "command": "cleanRebuild",
            "targets": [ "all" ],
            "preset": "${command:cmake.activeBuildPresetName}",
            "group": "build",
            "problemMatcher": [],
            "detail": "CMake template clean rebuild task"
        },
        {
            "type": "shell",
            "label": "CubeProg: List all available communication interfaces",
            "command": "STM32_Programmer_CLI",
            "args": [ "--list" ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        }
    ]
}